<Window x:Class="AuroraAssetEditor.BulkActionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Text="Replace Existing?" Margin="0,0,5,0" />
        <CheckBox Grid.Row="0" Grid.Column="1" MinWidth="10" x:Name="ReplaceExistingChk" x:FieldModifier="private"
                 HorizontalAlignment="Stretch" Margin="0,0,5,0" />
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Text="Cover Art Only?" Margin="0,0,5,0" />
        <CheckBox Grid.Row="1" Grid.Column="1" MinWidth="10" x:Name="CoverArtOnlyChk" x:FieldModifier="private"
                 HorizontalAlignment="Stretch" Margin="0,0,5,0" IsChecked="True" />
        <WrapPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0"
                   VerticalAlignment="Bottom">
            <Button x:Name="OkButton" IsDefault="True" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">
                _Ok
            </Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
